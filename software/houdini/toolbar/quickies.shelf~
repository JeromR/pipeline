  <tool name="assignEnvVars" label="assignEnvVars" icon="SOP_file">
    <script scriptType="python"><![CDATA[import os
vars = hou.ui.readMultiInput("Input values. Full path to project and the names of the sequence and shot.", ("Project name", "Sequence name", "Shot name"), title="Assign environment variables", help="")
if str(vars[1][0]) != "":
    env_project = "/mnt/karramba/" + str(vars[1][0])
    os.environ.update({"PROJECT": env_project})
    hou.hscript("set -g PROJECT = '" + env_project + "'")
if str(vars[1][0]) != "":
    if str(vars[1][1]) != "":
	env_sequence = env_project + "/film/sequences/" + str(vars[1][1])
	os.environ.update({"SEQUENCE": env_sequence})
	hou.hscript("set -g SEQUENCE = '" + env_sequence + "'")
if str(vars[1][0]) != "":
    if str(vars[1][1]) != "":
	if str(vars[1][2]) != "":
	    env_shot = env_sequence + "/shots/" + str(vars[1][2])
	    os.environ.update({"SHOT": env_shot})
	    hou.hscript("set -g SHOT = '" + env_shot + "'")
if str(vars[1][0]) != "":
    env_assets = env_project + "/film/assets/"
    os.environ.update({"ASSETS": env_assets})
    hou.hscript("set -g ASSETS = '" + env_assets + "'")]]></script>
    <keywordList>
      <keyword>Assign environment variables, such as $PROJECT etc.</keyword>
    </keywordList>
  </tool> 
